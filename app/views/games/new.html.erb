<div class="container">
  <h1 class="ms-3">New game</h1>

  <div class="d-flex flex-row w-100">
    <% @letters.each do |letter| %>
    <div class="d-flex justify-content-center align-items-center m-3 border btn btn-primary" style="width:45px; height:45px"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="row m-3">
    <label>What is the longer word you can find?</label>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="col-3 border border-1 rounded">
    <input type="submit" value="Play" class="col-1 btn btn-primary">

  </form>
</div>
